<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Idea"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#123a74"
            android:layout_marginBottom="16dp"/>

        <!-- Name -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name : T-Shirt Printing &amp; Making Unit"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <!-- Description -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:minHeight="100dp"
            android:gravity="top"
            android:layout_marginBottom="12dp"/>

        <!-- Category -->
        <EditText
            android:id="@+id/etCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category: Textile"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <!-- Budget Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etBudgetMin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Budget : Minimum"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etBudgetMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Budget : Maximum"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Manage Raw Materials Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manage Raw Materials"
                android:textColor="#123a74"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Plus Button with Border -->
            <ImageButton
                android:id="@+id/btnAddRawMaterial"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_add"
                android:scaleType="centerInside"
                android:background="@drawable/plus_button_border"
                android:contentDescription="Add Raw Material" />
        </LinearLayout>

        <!-- Dynamic Container for Raw Materials -->
        <LinearLayout
            android:id="@+id/containerRawMaterials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- Add Idea Button -->
        <Button
            android:id="@+id/btnAddIdea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Idea"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#123a74"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>
