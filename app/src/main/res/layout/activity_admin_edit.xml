<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Logo"
            android:src="@drawable/logotext" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Page"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Business Name -->
        <EditText
            android:id="@+id/etBusinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business Name"
            android:padding="12dp"
            android:background="@drawable/edittext_bg" />

        <!-- Description -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_bg" />

        <!-- Category -->
        <EditText
            android:id="@+id/etCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_bg" />

        <!-- Budget Min / Max -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/etBudgetMin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Budget Min"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etBudgetMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Budget Max"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edittext_bg" />
        </LinearLayout>

        <!-- Manage Raw Materials Section (Inside Card Style Box) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:elevation="4dp">

            <!-- Title + Add Button Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Raw Materials"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <!-- Custom Plus Button with Border -->
                <ImageButton
                    android:id="@+id/btnAddRawMaterial"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/plus_button_border"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Add Raw Material"
                    android:padding="10dp"
                    android:layout_marginLeft="70dp"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <!-- Dynamic Raw Materials Container -->
            <LinearLayout
                android:id="@+id/rawMaterialsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Modify / Remove Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnModify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modify Idea"
                android:backgroundTint="#153d82"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remove Idea"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
